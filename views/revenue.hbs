<!-- Content to Print -->
<div id="printableArea" class="container">

    <h3 class="text-center my-4 display-6"><strong>Thông Tin Lương Bác Sĩ</strong></h3>

    <button type="button" class="btn btn-sm btn-outline-primary" id="btnPrint" onclick="printDiv()" >
        <i class="fas fa-print"></i> In phiếu lương
    </button>

    <div style="padding-bottom: 30px;"></div>

    {{#each records}}

    <!-- Table 1: Patient Details -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title mb-0">Chi Tiết Ca Bệnh</h5>
        </div>
        <div class="card-body p-3">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Tên bệnh nhân</th>
                        <th>Chẩn đoán</th>
                        <th>Ngày nhập viện</th>
                        <th>Ngày xuất viện</th>
                        <th>Trạng thái bệnh</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each details}}
                    <tr>
                        <td>{{Name}}</td>
                        <td>{{Diagnosis}}</td>
                        <td>{{entry_date}}</td>
                        <td>{{discharge_date}}</td>
                        <td>{{medical_status}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Table 2: Doctor Information -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="card-title mb-0">Tổng lương</h5>
        </div>
        <div class="card-body p-3">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Tổng doanh thu</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{totalRevenue}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    {{/each}}
</div>


<script>
    function printDiv() {
        var printContents = document.getElementById("printableArea").innerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
    }
</script>


